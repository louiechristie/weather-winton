{
  "name": "weather-winton-server",
  "version": "0.0.3",
  "private": true,
  "author": {
    "name": "Louie Christie",
    "url": "https://www.louiechristie.com/"
  },
  "scripts": {
    "watch": "yarn nodemon app.js",
    "start": "yarn node app.js",
    "lint": "yarn eslint '**/*.js' --ignore-path .gitignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "markdownlint --fix"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "cookie-parser": "~1.4.5",
    "core-js": "^3.6.5",
    "dayjs": "^1.8.28",
    "debug": "~4.1.1",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "node-fetch": "^2.6.0"
  },
  "devDependencies": {
    "eslint": "^7.2.0",
    "eslint-cli": "^1.1.1",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "markdownlint-cli": "^0.23.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  }
}
