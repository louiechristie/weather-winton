{
  "name": "weather-winton-server",
  "version": "0.5.1",
  "private": true,
  "author": {
    "name": "Louie Christie",
    "url": "https://www.louiechristie.com/"
  },
  "scripts": {
    "watch": "nodemon app.js",
    "start": "node app.js",
    "lint": "npm run eslint '**/*.js' --ignore-path .gitignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "markdownlint --fix"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "cookie-parser": "~1.4.5",
    "core-js": "^3.8.1",
    "dayjs": "^1.9.7",
    "debug": "~4.3.1",
    "dotenv": "^8.2.0",
    "express": "~4.17.1",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "eslint": "^7.15.0",
    "eslint-cli": "^1.1.1",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.3",
    "markdownlint-cli": "^0.25.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1"
  }
}
