{
  "name": "weather-winton-server",
  "version": "0.9.1",
  "private": true,
  "author": {
    "name": "Louie Christie",
    "url": "https://www.louiechristie.com/"
  },
  "scripts": {
    "dev": "yarn nodemon app.js",
    "start": "yarn node app.js",
    "start:prod": "NODE_ENV=production node app.js",
    "lint": "yarn eslint '**/*.js' --ignore-path .gitignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "markdownlint --fix"
    ],
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "cookie-parser": "~1.4.5",
    "core-js": "^3.12.1",
    "dayjs": "^1.10.4",
    "debug": "~4.3.1",
    "dotenv": "^9.0.2",
    "express": "~4.17.1",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "eslint": "^7.26.0",
    "eslint-cli": "^1.1.1",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "markdownlint-cli": "^0.27.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.0"
  }
}
