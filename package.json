{
  "name": "weather-winton",
  "title": "Weather Winton",
  "description": "Weather Winton is an experiment in friendly weather forecasting.",
  "version": "0.43.1",
  "type": "module",
  "private": true,
  "author": {
    "name": "Louie Christie",
    "url": "https://www.louiechristie.com/"
  },
  "license": "UNLICENSED",
  "main": "index.js",
  "scripts": {
    "start": "next dev --turbopack",
    "build": "TZ='Europe/London' next build",
    "serve": "npx serve@latest out",
    "test": "npm run lint && npm run test:unit && npm run test:integration",
    "test:unit": "TZ='Europe/London' node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js --setupFiles dotenv/config",
    "test:unit:watch": "TZ='Europe/London' node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js --watch --setupFiles dotenv/config",
    "test:unit:debug": "TZ='Europe/London' node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js --runInBand getAverageTemperatureFromHourly.test.mjs",
    "test:integration": "npx playwright test",
    "test:debug": "npx playwright test --ui",
    "github-action:debug": "open -a Docker && act --container-architecture linux/amd64 --artifact-server-path ./test-results/",
    "lint:next": "next lint",
    "lint:tsc": "tsc",
    "lint": "npm run lint:tsc && eslint --ext .js,.jsx,.ts,.tsx,.mjs --ignore-pattern 'playwright-report' --ignore-pattern 'node_modules' --ignore-pattern '.cache' --ignore-pattern 'public' --ignore-pattern 'out' --ignore-pattern '.next' --ignore-pattern 'data/daily/daily.js' && stylelint --ignore-path .gitignore '**/*.css'",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx,.mjs --ignore-pattern 'playwright-report' --ignore-pattern 'node_modules' --ignore-pattern '.cache' --ignore-pattern 'public' --fix ; stylelint --ignore-path .gitignore '**/*.css' --fix",
    "npm:check": "npx npm-check --specials=eslint,jest,prettier",
    "generate:images": "NODE_ENV=production node --experimental-transform-types ./generateImages.ts",
    "lighthouse:autorun": "npx @lhci/cli autorun",
    "lighthouse:open": "npx @lhci/cli open",
    "lighthouse": "npm run lighthouse:autorun ; npm run lighthouse:open"
  },
  "dependencies": {
    "@emotion/react": "11.14.0",
    "@emotion/styled": "11.14.1",
    "@eslint/eslintrc": "3",
    "@mui/material": "7.3.7",
    "axios": "1.13.2",
    "color": "5.0.3",
    "date-holidays": "3.26.6",
    "dayjs": "1.11.19",
    "globals": "16.5.0",
    "neostandard": "0.12.2",
    "next": "16.1.4",
    "react": "19",
    "react-dom": "19",
    "temporal-polyfill": "0.3.0",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@babel/core": "7.28.6",
    "@babel/preset-typescript": "7.28.5",
    "@eslint/js": "^9.39.2",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "1.58.0",
    "@types/color": "4.2.0",
    "@types/jest": "30.0.0",
    "@types/node": "24",
    "@types/react": "19",
    "@types/react-dom": "19",
    "@typescript-eslint/eslint-plugin": "8.53.1",
    "@typescript-eslint/parser": "8.53.1",
    "dotenv": "17.2.3",
    "eslint": "9",
    "eslint-config-next": "16.1.4",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "jest": "30.2.0",
    "jest-resolve": "^30.2.0",
    "jest-silent-reporter": "^0.6.0",
    "prettier": "3.8.1",
    "sharp": "^0.34.5",
    "stylelint": "16.26.1",
    "stylelint-config-standard": "39.0.1",
    "stylelint-prettier": "5.0.3",
    "ts-jest": "29.4.6",
    "ts-node": "10.9.2",
    "typescript": "5",
    "typescript-eslint": "8.53.1"
  },
  "overrides": {
    "@typescript-eslint/parser": "8.53.1"
  },
  "engines": {
    "node": "24.x"
  }
}
