{
  "name": "weather-winton",
  "title": "Weather Winton",
  "description": "Weather Winton is an experiment in friendly weather forecasting.",
  "version": "0.35.1",
  "type": "module",
  "private": true,
  "author": {
    "name": "Louie Christie",
    "url": "https://www.louiechristie.com/"
  },
  "main": "index.js",
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npm run generate:images && next build",
    "start": "npx serve@latest out",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js --runInBand --setupFiles dotenv/config",
    "test:unit:watch": "node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js --watch -t test --setupFiles dotenv/config",
    "test:unit:debug": "node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js --runInBand getAverageTemperatureFromHourly.test.mjs",
    "test:integration": "npx playwright test",
    "test:integration:debug": "npx playwright test --ui",
    "lint:next": "next lint",
    "lint:tsc": "tsc",
    "lint": "npm run lint:tsc && eslint --ext .js,.jsx,.ts,.tsx,.mjs --ignore-pattern 'playwright-report' --ignore-pattern 'node_modules' --ignore-pattern '.cache' --ignore-pattern 'public' --ignore-pattern 'out' --ignore-pattern '.next' --ignore-pattern 'data/daily/daily.js' && stylelint --ignore-path .gitignore '**/*.css'",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx,.mjs --ignore-pattern 'playwright-report' --ignore-pattern 'node_modules' --ignore-pattern '.cache' --ignore-pattern 'public' --fix ; stylelint --ignore-path .gitignore '**/*.css' --fix",
    "npm:check": "npx npm-check --specials=eslint,gatsby,jest,prettier",
    "generate:images": "NODE_ENV=production node --experimental-transform-types ./generateImages.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@eslint/eslintrc": "^3",
    "@mui/material": "^6.4.11",
    "@types/geojson": "^7946.0.16",
    "axios": "^1.11.0",
    "color": "^4.2.3",
    "date-holidays": "^3.24.1",
    "dayjs": "^1.11.13",
    "globals": "^16.0.0",
    "neostandard": "^0.12.1",
    "next": "15.4.7",
    "react": "^18",
    "react-dom": "^18",
    "react-helmet": "^6.1.0",
    "stylelint": "^16.18.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-prettier": "5.0.3",
    "temporal-polyfill": "^0.3.0",
    "typescript-eslint": "^8.29.1"
  },
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.51.1",
    "@types/color": "^4.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "8.29.1",
    "@typescript-eslint/parser": "8.29.1",
    "dotenv": "^17.2.1",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.2.6",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "jest": "^30.0.5",
    "jest-silent-reporter": "^0.6.0",
    "prettier": "3.5.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "engines": {
    "node": "22.x"
  }
}
