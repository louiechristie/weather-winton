{
  "name": "weather-winton",
  "title": "Weather Winton",
  "description": "Weather Winton is an experiment in friendly weather forecasting.",
  "version": "0.35.2",
  "type": "module",
  "private": true,
  "author": {
    "name": "Louie Christie",
    "url": "https://www.louiechristie.com/"
  },
  "main": "index.js",
  "scripts": {
    "start": "next dev --turbopack",
    "build": "npm run generate:images && next build",
    "serve": "npx serve@latest out",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "TZ='Europe/London' node --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js --setupFiles dotenv/config",
    "test:unit:watch": "TZ='Europe/London' --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js --watch -t test --setupFiles dotenv/config",
    "test:unit:debug": "TZ='Europe/London' --experimental-vm-modules --disable-warning=ExperimentalWarning node_modules/jest/bin/jest.js --runInBand getAverageTemperatureFromHourly.test.mjs",
    "test:integration": "npx playwright test",
    "debug:test": "npx playwright test --ui",
    "debug:github-action": "open -a Docker && act --container-architecture linux/amd64 --artifact-server-path ~/Desktop/artifacts",
    "lint:next": "next lint",
    "lint:tsc": "tsc",
    "lint": "npm run lint:tsc && eslint --ext .js,.jsx,.ts,.tsx,.mjs --ignore-pattern 'playwright-report' --ignore-pattern 'node_modules' --ignore-pattern '.cache' --ignore-pattern 'public' --ignore-pattern 'out' --ignore-pattern '.next' --ignore-pattern 'data/daily/daily.js' && stylelint --ignore-path .gitignore '**/*.css'",
    "lint:fix": "eslint --ext .js,.jsx,.ts,.tsx,.mjs --ignore-pattern 'playwright-report' --ignore-pattern 'node_modules' --ignore-pattern '.cache' --ignore-pattern 'public' --fix ; stylelint --ignore-path .gitignore '**/*.css' --fix",
    "npm:check": "npx npm-check --specials=eslint,jest,prettier",
    "generate:images": "NODE_ENV=production node --experimental-transform-types ./generateImages.ts"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@eslint/eslintrc": "^3",
    "@mui/material": "^7.3.4",
    "@types/geojson": "^7946.0.16",
    "axios": "^1.12.2",
    "color": "^5.0.2",
    "date-holidays": "^3.26.1",
    "dayjs": "^1.11.18",
    "globals": "^16.4.0",
    "neostandard": "^0.12.2",
    "next": "15.5.7",
    "react": "^19",
    "react-dom": "^19",
    "react-helmet": "^6.1.0",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-prettier": "5.0.3",
    "temporal-polyfill": "^0.3.0",
    "typescript-eslint": "^8.46.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.56.0",
    "@types/color": "^4.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "8.46.0",
    "@typescript-eslint/parser": "8.46.0",
    "dotenv": "^17.2.3",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.0",
    "jest": "^30.2.0",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  },
  "engines": {
    "node": "22.x"
  }
}
