{
  "name": "weather-winton-server",
  "version": "0.13.0",
  "private": true,
  "author": {
    "name": "Louie Christie",
    "url": "https://www.louiechristie.com/"
  },
  "scripts": {
    "dev": "nodemon app.js",
    "start": "NODE_ENV=production node app.js",
    "lint": "eslint '**/*.js' --ignore-path .gitignore"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
